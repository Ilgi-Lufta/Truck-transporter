@model Shofer
<partial name="NavPartial" />
<div class="mt-5 container">
    <h1 class="text-center mb-5">Krijo nje Shofer</h1>



    <div class="row">
        <form asp-controller="Shofer" asp-action="CreateShofer" method="post">
            <div class="col-sm-6">


                <div class="form-group">
                    <span asp-validation-for="Emri"></span>
                    <label asp-for="Emri"></label>
                    <input asp-for="Emri" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Pagesa"></span>
                    <label asp-for="Pagesa"></label>
                    <input asp-for="Pagesa" class="form-control">
                </div>
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary mt-3">Krijo Shofer</button>
                    <a asp-controller="Shofer" asp-action="AllShofer" class="btn btn-primary mt-3 mr-3"> Kthehu pas</a>
                </div>
        </form>
    </div>
</div>





