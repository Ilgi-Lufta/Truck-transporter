@{
    ViewData["Title"] = "Home Page";
}
<partial name="NavPartial" />
<div class="mt-5 container">

    <form asp-controller="Currency" asp-action="AllCurrency">
        <p>
            <input type="text" placeholder="Kerko" name="SearchString" />
            <input class="btn btn-primary" type="submit" value="Kerko" />
        </p>
    </form>
    <a class="btn btn-primary mb-2"  asp-action="AddCurrency" asp-controller="Currency"> Shto Currency </a>

    <div class="row">
        <div class="col sm-6">
            <table class="table table-striped table-bordered  ">
                <thead>
                    <tr>
                        <th scope="col">Emri</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Shofers)
                    {
                        <tr>
                            <td scope="row"> @item.CurrencyUnit</td>
                           


                            <td scope="row">
                                <a class="btn btn-primary" asp-action="EditCurrency" asp-controller="Currency" asp-route-id="@item.CurrencyId"> Edito</a>
                                <a class="btn btn-danger" asp-action="FshiCurrency" asp-controller="Currency" asp-route-id="@item.CurrencyId"> Fshi</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
            </div>
        </div>
    </div>
</div>

