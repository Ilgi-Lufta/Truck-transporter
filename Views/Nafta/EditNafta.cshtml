@model Nafta
<partial name="NavPartial"/>
<div class="mt-5 container">

<div class="row">
        <form asp-controller="Nafta" asp-action="EditedNafta" asp-route-id="@ViewBag.id" method="post">
    <div class="col-sm-6">
                <div class="form-group">
                    <span asp-validation-for="Litra"></span>
                    <label asp-for="Litra"></label>
                    <input asp-for="Litra" class="form-control">

                </div>
                <div class="form-group">
                    <span asp-validation-for="Cmimi"></span>
                    <label asp-for="Cmimi"></label>
                    <input asp-for="Cmimi" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="BlereShiturSelect"></span>
                    <label asp-for="BlereShiturSelect"></label>
                    <select asp-for="BlereShiturSelect" asp-items="@ViewBag.blereShitur" class="form-control"></select>
                </div>
    </div>
    <div class="col-sm-6">
      <button type="submit" class="btn btn-primary mt-3">Ndrysho te dhenat</button>
                <a asp-controller="Nafta" asp-action="AllNafta" class="btn btn-primary mt-3 mr-3"> Kthehu pas</a>
      </div>
</form>
</div> 
</div>

