@{
    ViewData["Title"] = "Home Page";
}
<partial name="NavPartial" />
<div class="mt-5 container">

    <form asp-controller="Nafta" asp-action="AllNafta">
        <p>

            Fillo <input class="ms-1" type="date" name="searchFirstTime" />
            Perfundo <input class="ms-1" type="date" name="searchSecondTime" />
            <input class="btn btn-primary" type="submit" value="Kerko" />
        </p>
    </form>
    <a class="btn btn-primary" asp-action="AddNafta" asp-controller="Nafta">Shto nje shit/blerje nafte</a>
    <h1>@ViewBag.RefPrice</h1>
    <div class="row">
        <div class="col sm-6">
            <table class="table table-hover table-sm table-info table-bordered  ">
                <thead>
                    <tr>

                        @*    <th scope="col">cmimi Blere-Shitur</th>*@

                        <th scope="col">Pagesa</th>
                        <th scope="col">Litra</th>
                        <th scope="col">CmimRef</th>
                        <th scope="col">Monedha</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Totali)
                    {
                        <tr>
                            <td scope="row"> @item.Pagesa</td>
                            <td scope="row"> @item.Litra</td>
                            <td scope="row"> @item.CmimRef</td>
                            <td scope="row"> @item.Monedha</td>

                        </tr>
                    }
                </tbody>
            </table>
            <div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col sm-6">
            <table class="table table-striped table-bordered  ">
                <thead>
                    <tr>
                        <th scope="col">Data</th>
                        <th scope="col">Litra</th>
                        <th scope="col">Pagesa</th>
                        <th scope="col">Pagesa Kryer</th>
                        <th scope="col">Curency</th>
                        <th scope="col">Blere</th>
                        <th scope="col">Shitur</th>
                        <th scope="col">Cmimi</th>
                        <th scope="col">Shtuar</th>
                        <th scope="col">veprime</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Shofers)
                    {
                        <tr>
                            <td scope="row"> @item.CreatedDate</td>
                            <td scope="row"> @item.Litra</td>
                            <td scope="row"> @item.Pagesa</td>
                            @if (item.PagesaKryer)
                            {
                                <td scope="row">
                                    <div><h2>  <i style="color:green;width:40px;height:40px;" class="bi bi-check-circle-fill"></i></h2></div>
                                </td>
                            }
                            else
                            {
                                <td scope="row">
                                    <div><h2>  <i style="color:red;width:40px;height:40px;" class="bi bi-exclamation-circle-fill"></i></h2></div>
                                </td>
                            }
                            <td scope="row"> @item.Currency.CurrencyUnit</td>
                            @if (item.BlereShiturSelect =="Blere")
                            {
                                <td scope="row"> @item.BlereShiturSelect</td>
                                <td scope="row"></td>
                            }
                            else
                            {
                                <td scope="row"></td>
                                <td scope="row"> @item.BlereShiturSelect</td>
                            }

                            <td scope="row"> @item.Cmimi @item.Currency.CurrencyUnit/L</td>
                            @if (item.RrugaId != null){
                            <td scope="row">
                                    Pjese e rruges  @item.Rruga.Emri
                                </td>
                            }else{
                                <td scope="row">
                                    si nafte
                                </td>

                            }
                            @if (item.RrugaId != null || (item.BlereShiturSelect == "Blere" && item.Pagesa<0))
                            {
                                <td scope="row">
                                </td>
                            }
                            else
                            {
                                <td scope="row">
                                    <a class="btn btn-primary" asp-action="EditNafta" asp-controller="Nafta" asp-route-id="@item.NaftaStockId"> Edito</a>
                                    <a class="btn btn-danger" asp-action="FshiNafta" asp-controller="Nafta" asp-route-id="@item.NaftaStockId"> Fshi</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            <div>
            </div>
        </div>
    </div>
</div>

