@model NaftaStock
<partial name="NavPartial" />
<div class="mt-5 container">
    <h1 class="text-center mb-5">Shto nje shitje/blerje nafte</h1>
    <div class="row">
        <form asp-controller="Nafta" asp-action="CreateNafta" method="post">
            <div class="col-sm-6">
                <div class="form-group">

                    <span asp-validation-for="Pagesa"></span>
                    <label asp-for="Pagesa"></label>
                    <input asp-for="Pagesa" type="text" class="form-control" required />

                </div>

                @*
                <span asp-validation-for="CurrencyId"></span>
                <label asp-for="CurrencyId"></label>
                <select asp-for="CurrencyId" class="form-control" required />
                @foreach (var item in @ViewBag.numberNames)
                {
                <option value="@item.Key">@item.Value</option>
                }*@
                <div class="form-group mb-2">

                    <span asp-validation-for="CurrencyId"></span>
                    <label asp-for="CurrencyId"></label>
                    <select asp-for="CurrencyId" asp-items="@ViewBag.numberNames" class="form-control"></select>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <span asp-validation-for="PagesaKryer"></span>
                            <label asp-for="PagesaKryer">PagesaKryer</label>
                        </div>
                        <div class="col-2">

                            <input type="checkbox" asp-for="PagesaKryer"  style="width: 30px;height: 30px;" onchange="this.value=this.checked" />
                        </div>
                    </div>



                </div>
                <div class="form-group">

                    <span asp-validation-for="Litra"></span>
                    <label asp-for="Litra"></label>
                    <input asp-for="Litra" type="text" class="form-control" required />
                </div>
                <div class="form-group">

                    <span asp-validation-for="Shenime"></span>
                    <label asp-for="Shenime"></label>
                    <input asp-for="Shenime" type="text" class="form-control"  />
                </div>

                <div class="form-group">

                    <span asp-validation-for="BlereShiturSelect"></span>
                    <label asp-for="BlereShiturSelect"></label>
                    <select asp-for="BlereShiturSelect" asp-items="@ViewBag.blereShitur" class="form-control"></select>
                </div>

            </div>
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary mt-3">Shto</button>
                <a asp-controller="Nafta" asp-action="AllNafta" class="btn btn-primary mt-3 mr-3"> Kthehu pas</a>
            </div>
        </form>
    </div>
</div>





