@{
    ViewData["Title"] = "Home Page";
}
<partial name="NavPartial" />
<div class="mt-5 container">

    <form asp-controller="Shofer" asp-action="AllShofer">
        <p>
            <input type="text" placeholder="Emri Shoferit" name="SearchString" />
            <input class="btn btn-primary" type="submit" value="Kerko" />
        </p>
    </form>
    <a class="btn btn-primary" asp-action="AddShofer" asp-controller="Shofer"> Shto Shofer</a>

    <div class="row">
        <div class="col sm-6">
            <table class="table table-striped table-bordered  ">
                <thead>
                    <tr>
                        <th scope="col">Emri</th>
                        @*<th scope="col">Pagesa</th>*@

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Shofers)
                    {
                        <tr>
                            <td scope="row"> @item.Emri</td>
                            @*<td scope="row"> @item.Pagesa</td>*@


                            <td scope="row">
                                <a class="btn btn-primary" asp-action="EditShofer" asp-controller="Shofer" asp-route-id="@item.ShoferId"> Edito</a>
                                <a class="btn btn-danger" asp-action="FshiShofer" asp-controller="Shofer" asp-route-id="@item.ShoferId"> Fshi</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
            </div>
        </div>
    </div>
</div>

