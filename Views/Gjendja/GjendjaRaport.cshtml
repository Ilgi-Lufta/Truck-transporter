@{
    ViewData["Title"] = "Home Page";
}
@using static  BioLab.Controllers.GjendjaController.TIPI
<partial name="NavPartial" />
<div class="mt-5 container">

    <form asp-controller="Gjendja" asp-action="GjendjaRaport">
        <p>

            Fillo <input class="ms-1" type="date" name="searchFirstTime" />
            Perfundo <input class="ms-1" type="date" name="searchSecondTime" />
            <input class="btn btn-primary" type="submit" value="Kerko" />
        </p>
    </form>
    @*<a class="btn btn-primary mb-1" asp-action="AddGjendja" asp-controller="Gjendja">Ndrysho gjendjen</a>*@
